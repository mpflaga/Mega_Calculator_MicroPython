[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    .venv,
    venv

# Ignore specific errors that are intentional or unavoidable
per-file-ignores =
    # led_display.py: E231 warnings in DIGIT_ARRAY are intentional for visual alignment
    led_display.py:E231,F821
    # main.py: Star imports from config are intentional for cleaner config access
    main.py:F403,F405,E722
    # test_led_display.py: Module import after code is required for mocking
    test_led_display.py:E402,E128,E501
    # test_main.py: Unused imports for type hints, line length acceptable in tests
    test_main.py:F401,E501
    # test_calculator.py: Unused results in some tests are intentional
    test_calculator.py:F841,E128
    # run_tests.py: Spacing is acceptable for readability
    run_tests.py:E302,E305
